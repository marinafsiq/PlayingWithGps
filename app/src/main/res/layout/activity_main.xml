<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.marinasiqueira.newgpstest.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latitude:"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="34dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/tv_latitude"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="82dp"
                    tools:layout_editor_absoluteY="34dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Longitude:"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="34dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/tv_longitude"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="82dp"
                    tools:layout_editor_absoluteY="34dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Provider:"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="34dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/tv_provider"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="82dp"
                    tools:layout_editor_absoluteY="34dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time:"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="34dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="82dp"
                    tools:layout_editor_absoluteY="34dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accuracy:"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="34dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/tv_accuracy"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="82dp"
                    tools:layout_editor_absoluteY="34dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Satellites Data:"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="34dp"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_satelite"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="82dp"
                    tools:layout_editor_absoluteY="34dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gnss Status: \nSV id | Azimuth Degrees | Signal | Constellation type"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="34dp"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_gnssStatus"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="82dp"
                    tools:layout_editor_absoluteY="34dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nmea:"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="34dp"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_nmea"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="82dp"
                    tools:layout_editor_absoluteY="34dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gnss Navigation Message:"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="34dp"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_gnssNavMsg"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="82dp"
                    tools:layout_editor_absoluteY="34dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
